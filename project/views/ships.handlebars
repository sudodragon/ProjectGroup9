    <h2>Ship Management System</h2>
    
    <br>
    <fieldset>
        <legend>Add Ship</legend>
        <form action="/ships" method="post">
            <label for="shipName">Ship Name:</label>
            <input type="text" id="shipName" name="shipName">
            <br>
            <br>
            <label for="registryNumber">Registry Number:</label>
            <input type="text" id="registryNumber" name="registryNumber">
            <br>
            <br>
            <label for="class">Class:</label>
            <input type="text" id="class" name="class">
            <br>
            <br>
            <label for="currentLocation">Current Location:</label>
            <input type="text" id="currentLocation" name="currentLocation">
            <br>
            <br>
            <label for="missionId">Mission:</label>
            <select name="missionId">
                <option value=""></option>
                {{#each missions}}
                    <option value={{missionId}}>{{directive}}</option>
                {{/each}}
            </select>
            <br>
            <br>
            <input type="submit" value="Add Ship">
        </form>
    </fieldset>
    <br>

    <h2>Ships</h2>

    <table>
        <thead>
            <tr>
                <th>Ship ID</th>
                <th>Ship Name</th>
                <th>Registry</th>
                <th>Class</th>
                <th>Current Location</th>
                <th>Mission</th>
            </tr>
        </thead>
        <tbody>
            {{#each ships}}
            <tr>
                <td>{{shipId}}</td>
                <td>{{shipName}}</td>
                <td>{{registry}}</td>
                <td>{{class}}</td>
                <td>{{currentLocation}}</td>
                <td>{{directive}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    
