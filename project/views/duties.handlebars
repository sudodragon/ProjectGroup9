    <h2>Duties Management System</h2>
   
    <form action="" method="post" id="addDutyForm">
        <fieldset>
            <legend>
                Add Duty:
            </legend>
            <label>Duty Name:</label>
            <input type="text" id="dutyNameAdd" name="dutyNameAdd">
            <br>
            <br>
            
            <label>Priority:</label>
            <input type="number" id="priorityAdd" name="priorityAdd">
            <br>
            <br>

            <label>Responsibilities:</label>
            <input type="text" id="responsibleAdd" name="responsibleAdd">
            <br>
            <br>

            <input type="submit" id="submitButton" value="Add Duty" />
        </fieldset>
    </form>
    <br>
    
    <h2>Duties</h2>
    <form action="" method="get" id="allDutyForm">
        <fieldset>
            <legend>
                Duties Rundown:
            </legend>

            <input type="submit" id="submitButton" value="Display Duties" />
        </fieldset>
    </form>

    <table>
        <thead>
            <tr>
                <th>Duty ID</th>
                <th>Duty Name</th>
                <th>Priority</th>
                <th>Responsibilities</th>
            </tr>
        </thead>
        <tbody>
            {{#each personnel}}
            <tr>
                <td>{{dutyId}}</td>
                <td>{{dutyName}}</td>
                <td>{{priority}}</td>
                <td>{{responsibilities}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    